<section>
    <div class="contenedor">
        <div class="formulario">
            <form method="post" action="/Login/Login">
                <h2>Iniciar Sesion</h2>

                <div class="mb-3">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" class="form-control" required value="@ViewData["Username"]" />
                </div>
                <div class="mb-3">
                    <label for="password">Password: </label>
                    <input type="password" id="password" name="password" class="form-control" required value="@ViewData["password"]" />
                </div>
                <div class="olvidar">
                    <label for="#">
                        <input type="checkbox" />
                        <a href="#">Olvide la contraseña</a>
                    </label>
                </div>
                <br />
                <button type="submit" class="btn btn-primary mb-3" style="width:auto">Acceder</button>
                @if (ViewData.ContainsKey("Error"))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Error"]
                    </div>
                }
            </form>

            <div>
                <div class="registrar">
                    <p>No tengo Cuenta<a href="@Url.Action("Registro","Login")"> Crear Una</a> </p>

                </div>


            </div>


        </div>
    </div>
</section>